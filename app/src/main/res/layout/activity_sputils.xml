<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!--添加String-->
        <TextView
            android:id="@+id/sp_add_string"
            style="@style/normal_text_view_title"
            android:text="添加String"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/normal_text_view"
                android:text="Key:"/>

            <EditText
                android:id="@+id/sp_string_key"
                style="@style/normal_edit_text"/>

            <TextView
                style="@style/normal_text_view"
                android:text="Value:"/>

            <EditText
                android:id="@+id/sp_string_value"
                style="@style/normal_edit_text"/>
        </LinearLayout>

        <!--添加boolean-->
        <TextView
            android:id="@+id/sp_add_boolean"
            style="@style/normal_text_view_title"
            android:text="添加Boolean"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/normal_text_view"
                android:text="Key:"/>

            <EditText
                android:id="@+id/sp_boolean_key"
                style="@style/normal_edit_text"/>

            <TextView
                style="@style/normal_text_view"
                android:text="Value:"/>

            <Spinner
                android:id="@+id/sp_boolean_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:entries="@array/choose_boolean"
                android:gravity="center"></Spinner>
        </LinearLayout>

        <!--添加int-->
        <TextView
            android:id="@+id/sp_add_int"
            style="@style/normal_text_view_title"
            android:text="添加Int"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/normal_text_view"
                android:text="Key:"/>

            <EditText
                android:id="@+id/sp_int_key"
                style="@style/normal_edit_text"/>

            <TextView
                style="@style/normal_text_view"
                android:text="Value:"/>

            <EditText
                android:id="@+id/sp_int_value"
                style="@style/normal_edit_text"/>
        </LinearLayout>

        <Button
            android:id="@+id/clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear"/>

        <ListView
            android:id="@+id/sp_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </LinearLayout>

</ScrollView>